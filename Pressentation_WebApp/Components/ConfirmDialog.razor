@inject Microsoft.AspNetCore.Components.NavigationManager Navigation
@using Pressentation_WebApp.Components;

@if (Show)
{
    <div class="model-overlay" @onclick="Close">
        <div class="model-content" @onclick:stopPropagation="true">
            <h3>@Title</h3>
            <p>@Message</p>
            @if (ModelType == ModelType.Confirmation)
            {
                <div class="button-group">
                    <button class="btn btn-danger" @onclick="Confirm">Ja, ta bort</button>
                    <button class="btn btn-secondary" @onclick="Close">Avbryt</button>
                </div>
            }
            else if (ModelType == ModelType.Information)
            {
                <div class="button-group">
                    <button class="btn btn-success" @onclick="Close">Stäng</button>
                </div>
            }
        </div>
    </div>
}

