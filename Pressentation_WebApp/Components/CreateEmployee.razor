@if (Show)
{
    <EditForm Model="Employee" OnValidSubmit="CreateEmployees">
        <div class="row mt-2">
            <div class="col-md-12 mb-3">
                <label class="form-label">Namn på anställd</label>
                <input type="text" @bind-value="Employee.Name" class="form-control" />
            </div>
            <div class="col-md-4 mb-3 d-flex align-items-end">
                <button type="submit" class="btn btn-success">@message</button>
            </div>
        </div>
    </EditForm>
    <ConfirmDialog ModelType="ModelType.Information" OnConfirmed="CloseConfirm" Title="Kund skappad" Message="@ConfirmationMessage" Show="showConfirm" />
}
