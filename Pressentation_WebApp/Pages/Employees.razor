@page "/employees"
@using Pressentation_WebApp.Components;

<table class="table table-dark table-sm table-hover">
    <caption>Table of Projects</caption>
    <thead>
        <tr>
            <th>#</th>
            <th>Anställd</th>
        </tr>
    </thead>
    <tbody>
        @if (EmployeesList != null && EmployeesList.Any())
            @foreach (var employee in EmployeesList)
            {
                <tr class="tr-mouse">
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>
                        <button class="btn btn-danger" @onclick="() => ConfirmDelete(employee.Id)" @onclick:stopPropagation="true">Delete</button>
                    </td>
                </tr>
            }
        else
        {
            <tr>
                <td>Laddar antställda..</td>
            </tr>
        }
    </tbody>

</table>
@if (showConfirmDialog)
    {
        <ConfirmDialog ModelType="ModelType.Confirmation" OnConfirmed="DeleteProject" />
    }
